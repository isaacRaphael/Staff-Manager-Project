<h1 class="mt-4">Enter Your Email</h1><br />
<form method="post">
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Email :</label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-secondary offset-2">Reset Password</button>
</form>
<div>
    @ViewBag.Message
</div>
