
@{
    ViewData["Title"] = "ResetPasswordInApp";
}
@model ResetPasswordViewModel



@if (Model.PasswordRest == false)
{
    <h1 class="mt-4">Reset Your Password</h1>
    <br />

    <form method="post">
        <div class="mb-3 row">
            <label asp-for="Password" class="col-sm-2 col-form-label">New Password :</label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label">Confirm Password :</label>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control">
            </div>
        </div>
        <input asp-for="Username" type="text" readonly hidden value=@User.Identity.Name />

        <button type="submit" class="btn btn-secondary offset-2">Reset Password</button>

    </form>






}
else
{

    <div class="jumbotron text-center">
        <h1 class="display-3">Reset Successful</h1>
        <hr>
        <p class="lead">
            <a class="btn btn-primary btn-sm"  role="button" asp-controller="Staff" asp-action="Index">Continue to Staff page</a>
        </p>
    </div>
}

<div>@ViewBag.Message</div>
